<div class="main">
<h1>ユーザー登録画面</h1>
    <%= form_tag("#{@user.id}/update") do%>
    <div class="form-content">
      <p>名前</p>
      <input name="name" value="<%= @user.name %>">
      <p>アドレス</p>
      <input name="email" value="<%= @user.email %>">
      <input type="submit" value="新規登録" >
    </div>
    <% end %>
</div>